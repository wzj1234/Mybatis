<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.RadioDao">
    <select id="selectRadioByID" parameterType="int" resultType="com.model.Radio">
        select * from `ra` where id = 1
    </select>
    <select id="queryAllRadioes" resultType="com.model.Radio"  
        useCache="false">
        <![CDATA[SELECT * FROM `ra` ORDER BY `id` ASC]]>
    </select>
</mapper>